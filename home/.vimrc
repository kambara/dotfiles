
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" General Settings

syntax on
filetype on
filetype indent on
filetype plugin on

set incsearch
set ts=4 sw=4 expandtab
set showmatch
set autoindent
set smartindent
set wildmenu
set hlsearch
set ignorecase

""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" MacVim

set guifont=Menlo:h14
colorscheme evening
